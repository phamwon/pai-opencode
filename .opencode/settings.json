{
  "paiVersion": "2.5-opencode",
  "env": {
    "PAI_DIR": ".opencode",
    "OPENCODE_MAX_OUTPUT_TOKENS": "80000",
    "BASH_DEFAULT_TIMEOUT_MS": "600000"
  },
  "contextFiles": [
    "skills/PAI/SKILL.md",
    "skills/PAI/SYSTEM/AISTEERINGRULES.md",
    "skills/PAI/USER/AISTEERINGRULES.md",
    "skills/PAI/USER/DAIDENTITY.md"
  ],
  "daidentity": {
    "name": "PAI",
    "fullName": "Personal AI Assistant",
    "displayName": "PAI",
    "color": "#3B82F6",
    "voiceId": "",
    "voice": {
      "stability": 0.5,
      "similarity_boost": 0.75,
      "style": 0,
      "speed": 1,
      "use_speaker_boost": true,
      "volume": 0.8
    },
    "startupCatchphrase": "PAI ready."
  },
  "principal": {
    "name": "User",
    "timezone": "UTC"
  },
  "pai": {
    "source": "github.com/Steffen025/pai-opencode",
    "upstream": "github.com/danielmiessler/PAI",
    "version": "2.5",
    "algorithm": "v0.2.25"
  },
  "techStack": {
    "browser": "chrome",
    "terminal": "terminal",
    "packageManager": "bun",
    "language": "TypeScript"
  },
  "provider": {
    "id": "anthropic",
    "name": "Anthropic Claude models - recommended for best quality",
    "model": "anthropic/claude-sonnet-4-5",
    "profile": "anthropic",
    "multiResearch": true
  }
}
